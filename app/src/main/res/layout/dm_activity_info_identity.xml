<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical"
    tools:context="com.dumai.xianjindai.activity.InfoIdentityActivity">

    <include layout="@layout/toolbar" />

    <include layout="@layout/text_authen_prompt" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/pixel_size_12"
        android:background="@color/gainsboro" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/pixel_size_50"
                android:layout_height="@dimen/pixel_size_40"
                android:layout_marginLeft="@dimen/pixel_size_28"
                android:layout_marginRight="@dimen/pixel_size_28"
                android:layout_marginTop="@dimen/pixel_size_20"
                android:src="@drawable/icon_identity" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/auto_recogni_identity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="bottom"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:text="@string/auto_recogni_identity"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/certification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_size_1"
                        android:background="@null"
                        android:gravity="top"
                        android:text="@string/certification"
                        android:textColor="@color/darkgray"
                        android:textSize="@dimen/text_size_14" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/pixel_size_20"
                    android:background="@drawable/icon_next" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gainsboro" />

            <EditText
                android:id="@+id/et_identity_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:background="@null"
                android:hint="@string/identity_name"
                android:maxLength="20"
                android:maxLines="1"
                android:textColorHint="@color/darkgray"
                android:textSize="@dimen/text_size_16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gainsboro" />

            <EditText
                android:id="@+id/et_identity_code"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:background="@null"
                android:hint="@string/identity_code"
                android:maxLength="20"
                android:maxLines="1"
                android:textColorHint="@color/darkgray"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gainsboro" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/pixel_size_14"
        android:background="@color/gainsboro" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pixel_size_10"
                android:layout_marginLeft="@dimen/pixel_size_26"
                android:layout_marginRight="@dimen/pixel_size_15"
                android:layout_marginTop="@dimen/pixel_size_15"
                android:text="@string/resident_address"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_provincial_city"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:clickable="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_province"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/province"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:textColorHint="@color/darkgray"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/tv_city"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:textColorHint="@color/darkgray"
                        android:textSize="@dimen/text_size_16" />

                    <TextView
                        android:id="@+id/tv_county"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/county"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:textColorHint="@color/darkgray"
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/pixel_size_20"
                    android:background="@drawable/icon_open" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gainsboro" />

            <EditText
                android:id="@+id/et_detailed_ars"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/pixel_size_3"
                android:layout_weight="0.8"
                android:background="@null"
                android:gravity="top"
                android:hint="@string/detailed_address"
                android:paddingTop="@dimen/pixel_size_3"
                android:textColorHint="@color/darkgray"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gainsboro" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/pixel_size_14"
        android:background="@color/gainsboro" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pixel_size_10"
            android:layout_marginLeft="@dimen/pixel_size_26"
            android:layout_marginRight="@dimen/pixel_size_15"
            android:layout_marginTop="@dimen/pixel_size_10"
            android:text="@string/highest_education"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16" />

        <LinearLayout
            android:id="@+id/ll_highest_education"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_education"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/please_select"
                android:maxLength="20"
                android:maxLines="1"
                android:textColorHint="@color/darkgray"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/pixel_size_20"
                android:background="@drawable/icon_open" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gainsboro" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pixel_size_10"
            android:layout_marginLeft="@dimen/pixel_size_26"
            android:layout_marginRight="@dimen/pixel_size_15"
            android:layout_marginTop="@dimen/pixel_size_10"
            android:text="@string/marital_status"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16" />

        <LinearLayout
            android:id="@+id/ll_marital_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_marital_status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/please_select"
                android:maxLength="20"
                android:maxLines="1"
                android:textColorHint="@color/darkgray"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/pixel_size_20"
                android:background="@drawable/icon_open" />
        </LinearLayout>
    </LinearLayout>

    <com.dumai.xianjindai.view.LoadingButton
        android:id="@+id/loading_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="20dp"
        android:background="@drawable/button_login_bg"
        android:text="@string/submit_btn"
        android:textColor="@android:color/white"
        android:textSize="@dimen/pixel_size_16" />

</LinearLayout>
